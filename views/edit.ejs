<%- include("partials/header") %>

<div class="container" style="margin-top: 100px;">
    <h1 style="text-align: center;">Edit <%= foundblog.name %></h1>
    <div style="width: 30%; margin: 0 auto; border: 2px;">

        <form action="/<%= foundblog._id %>?_method=PUT" method="POST">
            <div class="form-group row">                
                <div class="col-sm-10">
                    <input type="text" name="blog[name]" class="form-control" id="name" value="<%= foundblog.name%>">
                </div>
            </div>
            <div class="form-group row">                
                <div class="col-sm-10">
                    <input type="text" name="blog[image]" class="form-control" id="image" value="<%= foundblog.image%>">
                </div>
            </div>
            <div class="form-group row">                
                <div class="col-sm-10">
                    
                    <textarea name="blog[body]" class="form-control" id="body" > <%= foundblog.body%></textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>
            </div>
        </form>  
        <a href="/<%= foundblog._id %>"><strong>Go back</strong></a>      
    </div>
</div>

<%- include("partials/footer") %>